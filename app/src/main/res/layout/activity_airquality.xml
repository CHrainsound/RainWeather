<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/airquality_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="60dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="18dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="100dp" />


        <ImageButton
            android:id="@+id/btn_return_airquality"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/backicon"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintTop_toTopOf="@id/gl_top"
            app:tint="@color/airquality_return_background" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            app:cardBackgroundColor="@color/airquality_card_background"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_return_airquality">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/tv_aqitop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天气质量"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_aqi_level"
                    android:textSize="40sp"
                    android:text="优"
                    android:textColor="@color/good"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_aqi"
                    app:layout_constraintBottom_toTopOf="@id/detail"/>

                <TextView
                    android:id="@+id/tv_aqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34"
                    android:textSize="60sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_aqitop" />

                <LinearLayout
                    android:id="@+id/detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_aqi"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="5dp">

                    <!--PM2.5-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_pm2_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="77"
                            android:textColor="#FF7F50"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/tv_pm2_5s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM2.5"
                            android:textColor="#888888"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 项 2: PM10 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_pm10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="91"
                            android:textColor="#4CAF50"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/tv_pm10s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM10"
                            android:textColor="#888888"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 项 3: SO2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_so2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9"
                            android:textColor="#4CAF50"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/tv_so2s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SO2"
                            android:textColor="#888888"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 项 4: NO2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_no2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13"
                            android:textColor="#4CAF50"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/tv_no2s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NO2"
                            android:textColor="#888888"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 项 5: O3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_o3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="61"
                            android:textColor="#4CAF50"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/tv_o3s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O3"
                            android:textColor="#888888"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!--CO-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_co"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.5"
                            android:textColor="#4CAF50"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/tv_cos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CO"
                            android:textColor="#888888"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>